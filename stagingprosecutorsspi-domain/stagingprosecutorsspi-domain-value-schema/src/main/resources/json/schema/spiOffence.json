{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/staging/prosecutors/spi/json/schemas/offence.json",
  "type": "object",
  "description": "Offences Details",
  "properties": {
    "offenceCode": {
      "type": "string",
      "description": "Identifies the CJS code applicable to criminal offences as per the CJS Standard section 3.11",
      "maxLength": 8
    },
    "offenceSequenceNumber": {
      "type": "integer",
      "description": "Sequence number of the offence",
      "maxLength": 3
    },
    "chargeDate": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern",
      "type": "string",
      "description": ""
    },
    "offenceDateCode": {
      "description": "The code for the offence date to be used within the offence wording, 1 = on or in, 2 = before, 3 = after, 4 = between, 5 = on or about and 6 = on or before",
      "type": "integer",
      "minimum": 1,
      "maximum": 6
    },
    "offenceCommittedDate": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern",
      "type": "string",
      "description": "Date on which the offence is committed"
    },
    "offenceCommittedEndDate": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern",
      "type": "string",
      "description": "End date for period in which offence committed"
    },
    "offenceLocation": {
      "type": "string",
      "description": "Offence location",
      "maxLength": 80
    },
    "offenceWording": {
      "type": "string",
      "description": "Details of Information or Charge to be laid before the court",
      "maxLength": 2500
    },
    "offenceWordingWelsh": {
      "type": "string",
      "description": "Details of Information or Charge to be laid before the court in Welsh",
      "maxLength": 2500
    },
    "statementOfFacts": {
      "type": "string",
      "description": "Statement of facts",
      "maxLength": 4000
    },
    "statementOfFactsWelsh": {
      "type": "string",
      "description": "Statement of facts in Welsh",
      "maxLength": 4000
    },
    "appliedCompensation": {
      "type": "number",
      "description": "Compensation claimed by the prosecutor"
    },
    "backDuty": {
      "type": "number",
      "description": "Back duty"
    },
    "backDutyDateFrom": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern",
      "type": "string",
      "description": "Start date of the period of unpaid back duty"
    },
    "backDutyDateTo": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern",
      "type": "string",
      "description": "End date of the period of unpaid back duty"
    }
  },
  "required": [
    "offenceCode",
    "offenceSequenceNumber",
    "offenceDateCode",
    "offenceCommittedDate",
    "offenceWording",
    "chargeDate"
  ],
  "additionalProperties": false
}