{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/staging/prosecutors/spi/json/schemas/caseDefendant.json",
  "type": "object",
  "properties": {
    "defendantId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "prosecutorReference": {
      "type": "string"
    },
    "associatedPerson": {
      "type": "array",
      "items": {
        "$ref": "http://cpp.moj.gov.uk/staging/prosecutors/spi/json/schemas/associatedIndividual.json"
      }
    },
    "offences": {
      "type": "array",
      "items": {
        "$ref": "http://cpp.moj.gov.uk/staging/prosecutors/spi/json/schemas/offenceDetails.json"
      }
    },
    "judicialResults": {
      "description": "A record of any judicial decisions and results made against the offence",
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/judicialResult.json"
      }
    },
    "pncId": {
      "type": "string"
    },
    "attendanceDays": {
      "type": "array",
      "items": {
        "$ref": "http://cpp.moj.gov.uk/staging/prosecutors/spi/json/schemas/attendanceDay.json"
      }
    },
    "individualDefendant": {
      "$ref": "http://cpp.moj.gov.uk/staging/prosecutors/spi/json/schemas/individualDefendant.json"
    },
    "corporateDefendant": {
      "$ref": "http://cpp.moj.gov.uk/staging/prosecutors/spi/json/schemas/organisationDetails.json"
    }
  },
  "additionalProperties": true,
  "required": [
    "defendantId",
    "prosecutorReference",
    "offences"
  ],
  "oneOf": [
    {
      "required": [
        "individualDefendant"
      ]
    },
    {
      "required": [
        "corporateDefendant"
      ]
    }
  ]
}
