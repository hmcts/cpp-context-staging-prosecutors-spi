{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/staging/prosecutors/spi/json/schemas/attendanceDay.json",
  "type": "object",
  "properties": {
    "day": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "attendanceType": {
      "description": "The defendant attendance type for hearing.",
      "type": "string",
      "enum": [
        "IN_PERSON",
        "BY_VIDEO",
        "NOT_PRESENT"
      ]
    }
  },
  "required": [
    "day",
    "attendanceType"
  ],
  "additionalProperties": false
}