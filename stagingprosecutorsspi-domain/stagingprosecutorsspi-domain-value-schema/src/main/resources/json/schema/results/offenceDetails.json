{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/staging/prosecutors/spi/json/schemas/offenceDetails.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "offenceSequenceNumber": {
      "type": "integer"
    },
    "offenceCode": {
      "type": "string"
    },
    "wording": {
      "type": "string"
    },
    "offenceDateCode": {
      "type": "integer",
      "id": "officeDateCode"
    },
    "startDate": {
      "type": "string",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "endDate": {
      "type": "string",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "arrestDate": {
      "type": "string",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "chargeDate": {
      "type": "string",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "offenceFacts": {
      "$ref": "http://justice.gov.uk/core/courts/offenceFacts.json"
    },
    "plea": {
      "$ref": "http://justice.gov.uk/core/courts/plea.json"
    },
    "indicatedPlea": {
      "$ref": "http://justice.gov.uk/core/courts/indicatedPlea.json"
    },
    "modeOfTrial": {
      "type": "string"
    },
    "finding": {
      "type": "string"
    },
    "convictingCourt": {
      "type": "integer"
    },
    "convictionDate": {
      "type": "string",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "finalDisposal": {
      "type": "string"
    },
    "judicialResults": {
      "description": "A record of any judicial decisions and results made against the offence",
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/judicialResult.json"
      }
    },
    "allocationDecision": {
      "$ref": "http://justice.gov.uk/core/courts/allocationDecision.json"
    }
  },
  "required": [
    "id",
    "offenceSequenceNumber",
    "offenceCode",
    "offenceDateCode",
    "wording",
    "startDate"
  ],
  "additionalProperties": true
}