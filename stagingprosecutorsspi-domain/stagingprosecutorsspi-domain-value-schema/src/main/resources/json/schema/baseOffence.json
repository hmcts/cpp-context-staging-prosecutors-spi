{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/staging/prosecutors/spi/json/schemas/baseOffense.json",
  "type": "object",
  "properties": {
    "offenceSequenceNumber": {
      "type": "integer",
      "description": "Sequence number of the offence"
    },
    "offenceCode": {
      "type": "string",
      "description": "Identifies the CJS code applicable to criminal offences as per the CJS Standard section 3.11"
    },
    "offenceWording": {
      "type": "string"
    },
    "offenceDateCode": {
      "type": "integer",
      "id": "officeDateCode"
    },
    "offenceDateStartDate": {
      "type": "string",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "offenceStartTime": {
      "type": "string"
    },
    "offenceEndDate": {
      "type": "string",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "offenceEndTime": {
      "type": "string"
    },
    "chargeDate": {
      "type": "string",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "arrestDate": {
      "type": "string",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "locationOfOffence": {
      "type": "string",
      "description": "Location of offense"
    },
    "alcoholLevelAmount": {
      "type": "integer"
    },
    "alcoholLevelMethod": {
      "type": "string"
    },
    "vehicleCode": {
      "type": "string",
      "id": "vehicleCode"
    },
    "vehicleRegistrationMark": {
      "type": "string",
      "id": "vehicleRegistrationMark"
    }
  },
  "additionalProperties": false
}